<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="INGRESE EL NUMERO CELULAR"
        />
    <EditText
        android:id="@+id/etIngNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NUMERO DE CELULAR"
        android:inputType="number"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="INGRESE VALOR"
        />
    <EditText
        android:id="@+id/etIngValor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="MONTO A RECARGAR"
        android:inputType="number"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnEnviarRecarga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REALIZAR RECARGA"/>

    </LinearLayout>




</LinearLayout>