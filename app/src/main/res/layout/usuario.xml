<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvNombreUsuario"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Nombre Usuario" />
    <EditText
        android:id="@+id/etNombreUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese Nombre Usuario"
        android:inputType="text"/>

    <TextView
        android:id="@+id/tvCodUsuario"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Codigo Usuario"
        />
    <EditText
        android:id="@+id/etCodUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese codigo de usuario"
        android:inputType="number"/>

    <TextView
        android:id="@+id/tvTipoUsuario"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Tipo Usuario"
        />
    <EditText
        android:id="@+id/etTipoUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese Tipo usuario"
        android:inputType="number"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnInsertUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insertar"/>

        <Button
            android:id="@+id/btnActUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel"/>

    </LinearLayout>


</LinearLayout>
